# {{ ansible_managed }}

[Unit]
Description=Atlassian Bamboo
After=syslog.target

[Service]
User=daemon
Group=daemon
ExecStart=/opt/atlassian/bamboo/bin/start-bamboo.sh
ExecStop=/opt/atlassian/bamboo/bin/stop-bamboo.sh
PIDFile=/opt/atlassian/bamboo/work/catalina.pid

[Install]
WantedBy=multi-user.target
