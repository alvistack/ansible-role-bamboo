# {{ ansible_managed }}

[Unit]
Description=Atlassian Bamboo
After=syslog.target network-online.target
Wants=syslog.target network-online.target

[Service]
Type=forking
User={{ bamboo_owner }}
Group={{ bamboo_group }}
ExecStart={{ bamboo_catalina }}/bin/start-bamboo.sh
ExecStop={{ bamboo_catalina }}/bin/stop-bamboo.sh
PIDFile={{ bamboo_catalina }}/work/catalina.pid

[Install]
WantedBy=multi-user.target
